{
  "version": "1.0.0",
  "name": "gulp-boilerplate",
  "description": "This template provides a basic structure for developing websites. It is designed to ease the initial stages of project work by offering minimal setup for frontend development.",
  "main": "gulpfile.js",
  "author": "Ilar",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "html": "html-validator -f lint -evH -i app/**/*.html",
    "dev": "gulp",
    "build": "gulp build",
    "svgmin": "gulp svgmin",
    "cache": "gulp cache",
    "zip": "gulp zip",
    "code": "editorconfig-checker",
    "lint": "npx eslint \"src/**/*.js\" --fix",
    "lint:css": "npx stylelint \"src/**/*.scss\" --fix",
    "format": "prettier --ignore-path .gitignore --write .",
    "prepare": "git config core.hooksPath .git-hooks || echo 'Not in a git repo'",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.26.7",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "babel-loader": "^9.2.1",
    "browser-sync": "^3.0.3",
    "del": "^8.0.0",
    "editorconfig-checker": "^6.0.1",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.0.1",
    "globals": "^15.14.0",
    "gulp": "^5.0.0",
    "gulp-autoprefixer": "^9.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-cli": "^3.0.0",
    "gulp-file-include": "^2.3.0",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^9.1.0",
    "gulp-notify": "^5.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rev-all": "^4.0.0",
    "gulp-rev-rewrite": "^6.0.0",
    "gulp-sass": "^6.0.0",
    "gulp-zip": "^6.1.0",
    "postcss": "^8.4.5",
    "postcss-scss": "^4.0.2",
    "prettier": "^3.0.3",
    "sass": "^1.83.4",
    "stylelint": "^16.14.1",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^6.11.0",
    "w3c-html-validator": "^1.8.2",
    "webpack": "^5.65.0",
    "webpack-stream": "^7.0.0"
  },
  "dependencies": {
    "gh-pages": "^6.3.0",
    "greensock": "^1.20.2",
    "gsap": "^3.12.7",
    "gulp-rev": "^11.0.0",
    "i18next": "^24.2.3",
    "lint-staged": "^15.2.7"
  }
}
